@model Entity.Concrete.Writer
@{
	ViewData["Title"] = "WriterUpdateProfile";
	Layout = "~/Views/Writer/WriterLayout.cshtml";
}

<h1>WriterUpdateProfile</h1>
@using (Html.BeginForm("WriterUpdateProfile", "Writer", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
				<br/>
						@Html.HiddenFor(w=>w.Id, new {@class= "form-control"})
				<form class="forms-sample">
					<div class="form-group">
						<label for="exampleInputName1">Yazar Adı Soyadı</label>
						@Html.TextBoxFor(w=>w.FullName, new {@class= "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3">E-Posta Adresi</label>
						@Html.TextBoxFor(w=>w.Email, new {@class= "form-control"})
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Şifre</label>
						@Html.PasswordFor(w=>w.Password, new {@class= "form-control"})
					</div>
					<div class="form-group">
						<label>Yazar Görseli</label>
						<input type="file" name="img[]" class="file-upload-default">
						<div class="input-group col-xs-12">
							<input type="text" class="form-control file-upload-info" disabled placeholder="Görseli Yükleyiniz">
							<span class="input-group-append">
								<button class="file-upload-browse btn btn-gradient-primary" type="button">Görsel Seçiniz</button>
							</span>
						</div>
					</div>
					<div class="form-group">
						<label for="exampleTextarea1">Yazar Hakkında</label>
						@Html.TextAreaFor(w=>w.About, 15,3, new {@class= "form-control"})
					</div>
					<button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
					<button class="btn btn-light">İptal</button>
				</form>
			</div>
		</div>
	</div>
}

